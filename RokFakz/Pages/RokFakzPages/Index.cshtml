@page
@model RokFakz.Pages.RokFakzPages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RokFak[0].Rock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RokFak[0].MohsHardness)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RokFak[0].Density)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RokFak[0].Texture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RokFak[0].Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RokFak[0].Fak)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.RokFak) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Rock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MohsHardness)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Density)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Texture)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fak)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
